<div class='container'>

  <h1> Add tags to plant <%= @plant.name %> </h1>

  <%= simple_form_for [@plant, @plant_tag] do |f|%>
    <%#= f.input :tag, collection: Tag.all %>
    <%= f.association :tag, input_html: { multiple: true, class: 'slim-select'} %>
    <%= f.submit 'Add tag', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'voltar', garden_path(@plant.garden), class: 'btn btn-info' %>
</div>